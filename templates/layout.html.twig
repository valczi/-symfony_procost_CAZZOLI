{% extends 'base.html.twig' %}

{% block body %}
{% set route_name = app.request.attributes.get('_route') %}
        <!-- Navbar -->
        <header class="app-header"><a class="app-header__logo" href="#">Procost</a>
            <a class="app-sidebar__toggle" href="#" data-toggle="sidebar" aria-label="Hide Sidebar"></a>
            <!-- Navbar Right Menu-->
            <ul class="app-nav">
                <li class="app-search">
                    <a href="login.html" class="btn btn-info">Se déconnecter</a>
                </li>
            </ul>
        </header>
<!-- Sidebar menu-->
        <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
        <aside class="app-sidebar">
            <div class="app-sidebar__user">
                <img class="app-sidebar__user-avatar" src="{{asset('img/user.jpg')}}" alt="User Image">
                <div>
                    <p class="app-sidebar__user-name">John Doe</p>
                    <p class="app-sidebar__user-designation">Manager</p>
                </div>
        </div>
            <ul class="app-menu">
                <li>
                <a {% if route_name matches '{main}' %} class="app-menu__item active" {% else %} class="app-menu__item" {% endif %} href={{path('main_homepage')}}>
                        <i class="app-menu__icon fa fa-dashboard"></i>
                        <span class="app-menu__label">Tableau de bord</span>
                    </a>
                </li>
                <li>
                    <a {% if route_name matches '{^project}' %} class="app-menu__item active" {% else %} class="app-menu__item" {% endif %} href={{path('project_list')}}>
                        <i class="app-menu__icon fa fa-laptop"></i>
                        <span class="app-menu__label">Projets</span>
                    </a>
                </li>
                <li>
                    <a {% if route_name matches '{^employe}' %} class="app-menu__item active" {% else %} class="app-menu__item" {% endif %} href={{path('employe_list')}}>
                        <i class="app-menu__icon fa fa-users"></i>
                        <span class="app-menu__label">Employés</span>
                    </a>
                </li>
                <li>
                    <a {% if route_name matches '{^metier}' %} class="app-menu__item active" {% else %} class="app-menu__item" {% endif %} href={{path('metier_list')}}>
                        <i class="app-menu__icon fa fa-book"></i>
                        <span class="app-menu__label">Métiers</span>
                    </a>
                </li>
            </ul>
        </aside>
        {% block content %}
        {% endblock %}}
        <footer class="main-footer">
            &copy; {{"now"|date('Y')}} - PROCOST
        </footer>

{% endblock %}