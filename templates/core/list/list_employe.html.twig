{% extends 'layout.html.twig' %}
{% block content %}
    <body class="app sidebar-mini">
        <main class="app-content">
            <div class="app-title">
                <div>
                    <h1><i class="fa fa-users"></i>&nbsp;Employés</h1>
                </div>
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#"><i class="fa fa-home fa-lg"></i></a>
                    </li>
                    <li class="breadcrumb-item">Employés</li>
                </ul>
            </div>
            <div class="tile pb-5">
                <a href={{path('employe_add')}} class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un employé</a>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Métier</th>
                                <th>Coût journalier</th>
                                <th>Date d'embauche</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for employe in employes %} 
                        {{ include('card/_employe-card.html.twig', {employe: employe}) }}
                        {% else %}
                            <div>Aucun employe disponible</div>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <hr/>
                <nav class="float-right">
                    {{ knp_pagination_render(employes, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
                </nav>
            </div>
        </main>
    </body>
        {% endblock %}